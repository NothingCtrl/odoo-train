<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="feature_demo_config_category_form_view" model="ir.ui.view">
            <field name="name">feature.demo.config.category.form.view</field>
            <field name="model">feature.demo.config.category</field>
            <field name="arch" type="xml">
                <form string="Config Category Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="feature_demo_config_category_tree_view" model="ir.ui.view">
            <field name="name">feature.demo.config.category.tree.view</field>
            <field name="model">feature.demo.config.category</field>
            <field name="arch" type="xml">
                <tree string="Config Category Tree">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

        <record id="feature_demo_config_category_action" model="ir.actions.act_window">
            <field name="name">Config Category</field>
            <field name="res_model">feature.demo.config.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a category
                </p>
            </field>
        </record>
    </data>
</odoo>