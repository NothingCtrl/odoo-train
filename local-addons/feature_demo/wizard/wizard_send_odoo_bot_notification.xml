<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="send_odoo_bot_notification_wizard_form" model="ir.ui.view">
            <field name="name">send.odoo.bot.notification.wizard.form</field>
            <field name="model">wizard.send.odoo.bot.notification</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="user_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="subject"/>
                        <field name="message"/>
                    </group>
                    <footer>
                        <button name="send_message" string="Send Message" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_send_odoo_bot_notification_action" model="ir.actions.act_window">
            <field name="name">Form Send Notification By Odoo Bot</field>
            <field name="res_model">wizard.send.odoo.bot.notification</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>